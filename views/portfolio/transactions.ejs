<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction History - Stock Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/portfolio/dashboard">Stock Tracker</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/portfolio/dashboard">Dashboard</a>
                <a class="nav-link" href="/portfolio/add">Add Stock</a>
                <a class="nav-link" href="/portfolio/transactions">Transactions</a>
                <a class="nav-link" href="/auth/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>Transaction History</h2>
        
        <% if (transactions.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Symbol</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% transactions.forEach(function(transaction) { %>
                            <tr>
                                <td><%= transaction.date.toLocaleDateString() %></td>
                                <td>
                                    <span class="badge 
                                        <%= transaction.type === 'BUY' ? 'bg-success' : '' %>
                                        <%= transaction.type === 'EDIT' ? 'bg-warning' : '' %>
                                        <%= transaction.type === 'DELETE' ? 'bg-danger' : '' %>">
                                        <%= transaction.type %>
                                    </span>
                                </td>
                                <td><%= transaction.symbol %></td>
                                <td><%= transaction.quantity %></td>
                                <td>$<%= transaction.price.toFixed(2) %></td>
                                <td>$<%= (transaction.quantity * transaction.price).toFixed(2) %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p>No transactions found.</p>
        <% } %>
    </div>
</body>
</html>